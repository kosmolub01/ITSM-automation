{
    "name": "ITSM Automation Extension", 
    "description": "Automates searching the ITSM for the incident.", 
    "version": "1.0",
    "manifest_version": 3, 
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "contextMenus", "tabs"],
    "action": {
        "default_popup": "popup.html"
    }, 
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}